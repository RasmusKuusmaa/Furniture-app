<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="naidisprojektmobile.Views.SignUpPage"
             xmlns:controls="clr-namespace:naidisprojektmobile.Controls"
             BackgroundColor="White"
             Title="Sign Up">
    <ContentPage.Content>
        <StackLayout Grid.Row="0" Padding="20, 0">
            <Label Text="username"/>
            <controls:FormField Placeholder="John doe"/>
            <Label Text="Email"/>
            <controls:FormField Placeholder="email"/>
            <Label Text="Password"/>
            <controls:FormField Placeholder="Password" IsPassword="True"/>
            
            <StackLayout Orientation="Horizontal">
                <CheckBox Color="Black"/>
                <Label Text="I agree with Terms &amp; Privacy"
                           VerticalTextAlignment="Center"/>
            </StackLayout>

            <Button Text="Sign Up" WidthRequest="500"
                        HeightRequest="75"
                        BackgroundColor="#4F63AC"
                        TextColor="white"
                        CornerRadius="5"
                        FontSize="16"
                        FontAttributes="Bold">

            </Button>
            <StackLayout Orientation="Horizontal" VerticalOptions="Center" HorizontalOptions="CenterAndExpand">
                <BoxView HeightRequest="1" WidthRequest="100" Color="Gray" VerticalOptions="Center"/>
                <Label Text="Or Sign up with" VerticalOptions="Center"/>
                <BoxView HeightRequest="1" WidthRequest="100" Color="Gray" VerticalOptions="Center"/>
            </StackLayout>

            <Button
                    BackgroundColor="#3F4A59"
                    Text="G"
                    TextColor="White"
                    FontSize="35"
                    WidthRequest="142"
                    HeightRequest="60"
                    CornerRadius="10"
                    HorizontalOptions="Center"/>

            <Label HorizontalOptions="Center">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Already have an account?  "/>
                        <Span Text="Sign in" FontAttributes="Bold"/>
                    </FormattedString>
                </Label.FormattedText>
            </Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>