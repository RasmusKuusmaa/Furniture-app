<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="naidisprojektmobile.Views.SplashPage"
             BackgroundColor="White">

    <ContentPage.Content>
        <Grid RowDefinitions="25,auto, 20, auto, 30, auto">
            <BoxView HeightRequest="100" Grid.Row="0"/>
            <Image x:Name="SplashImage"
                   Aspect="AspectFill"
                   Grid.Row="1"/>
            <BoxView Grid.Row="2"/>
            <StackLayout Grid.Row="3"
                         HorizontalOptions="Center"
                         VerticalOptions="Center">
                <Label Text="You'll Find"
                     HorizontalOptions="Center"
                       FontSize="40"
                       TextColor="#303030"/>
                <Label Text="All you need"
                       HorizontalOptions="Center"
                       TextColor="#FCA34D"
                       FontSize="40"
                       />
                <Label Text="Here!" HorizontalOptions="Center"
                       FontSize="40"
                       TextColor="#303030"/>
            </StackLayout>
            <BoxView Grid.Row="4"/>
            <StackLayout Grid.Row="5"
                         VerticalOptions="Center"
                         HorizontalOptions="Center"
                         Spacing="16">
                <Button Text="Sign Up" WidthRequest="300"
                        BackgroundColor="#4F63AC"
                        TextColor="white"
                        CornerRadius="5"
                        FontSize="16"
                        FontAttributes="Bold">
                    
                </Button>
                <Button Text="Sign In"
                        BackgroundColor="White"
                        TextColor="#4F63AC"
                        FontSize="16"
                        FontAttributes="Bold"></Button>
            </StackLayout>

        </Grid>
    </ContentPage.Content>
</ContentPage>